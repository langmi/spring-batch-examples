<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <description>
        Simple inter step communication example with:
        
            * 2 Taskletsteps
            * both accessing the JobExecutionContext directly
            
        Please use this with caution, it will cause thread problems for
        parallel steps.
        
        created for answering:
        http://stackoverflow.com/questions/8117060/spring-batch-storing-in-jobexecutioncontext-from-tasklet-and-accessing-in-anot
    </description>
    <!-- 
        inline xmlns, otherwise it would look like 
        'batch:job, batch:step, etc.' 
    -->
    <job id="jobContextInterStepCommunicationJob" xmlns="http://www.springframework.org/schema/batch">
        <step id="changingJobExecutionContextStep" next="readingJobExecutionContextStep">
            <tasklet ref="changingJobExecutionContextTasklet" />
        </step>
        <step id="readingJobExecutionContextStep">
            <tasklet ref="readingJobExecutionContextTasklet" />
        </step>
    </job>

    <bean id="changingJobExecutionContextTasklet" 
          class="de.langmi.spring.batch.examples.complex.crosscutting.interstepcommunication.jobcontext.ChangingJobExecutionContextTasklet" />

    <bean id="readingJobExecutionContextTasklet" 
          class="de.langmi.spring.batch.examples.complex.crosscutting.interstepcommunication.jobcontext.ReadingJobExecutionContextTasklet" />
</beans>
